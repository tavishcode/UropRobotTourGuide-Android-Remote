<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ust.hk.robottourguidemobileremotecontrol.MainActivity">

    <Button
        android:text="Forward"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fBtn" />
    <Button
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:id="@+id/sBtn"
        android:layout_below="@id/fBtn"
        android:text="Stop"
        android:background="@android:color/holo_red_light"/>
   <Button
        android:text="Back"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/sBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bBtn" />
    <Button
        android:text="Rotate Right"
        android:layout_marginTop="48dp"
        android:layout_toRightOf="@id/sBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rBtn" />
    <Button
        android:text="Rotate Left"
        android:layout_marginTop="48dp"
        android:layout_toLeftOf="@id/sBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lBtn" />

    <Button
        android:text="Send Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendLocBtn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
